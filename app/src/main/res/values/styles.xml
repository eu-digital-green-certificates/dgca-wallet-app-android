<resources>

    <style name="TextAppearance.Dgca.GeneralTitle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Dgca.CertificateTitle" parent="">
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontFamily">sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextAppearance.Dgca.CertificateValue" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="fontFamily">sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextAppearance.Dgca.RuleTitle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AddNewButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_half_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>